<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PranavFreshWorks" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>


        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="TextViewStyleBold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="TextViewStyleMedium" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="TextViewStyleRegular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="TextViewStyleSemiBold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/font_13sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/bg_btn_gradient</item>
    </style>

    <style name="ButtonStyleHollow" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/font_13sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/bg_button_hollow</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">@dimen/dimen_0.5dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0.5dp</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_13sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/dimen_0dp</item>
        <item name="android:paddingEnd">@dimen/dimen_0dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
    </style>

</resources>